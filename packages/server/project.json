{
  "name": "server",
  "projectType": "application",
  "root": "packages/server",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun --hot src/index.ts",
        "cwd": "packages/server"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun build src/index.ts --outfile ./dist/index.js --target node --format esm --minify",
        "cwd": "packages/server"
      }
    },
    
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd":"packages/server"
      }
    }
  }
}